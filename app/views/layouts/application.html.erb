<!DOCTYPE html>
<html>
  <head>
    <title>Blog Nucleus</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="topbar text-white">
      <div class="container-fluid">
        <nav class="navbar top-navbar navbar-expand-md navbar-dark">
          <% if signed_in? %>
            <% if current_user.user_type == "admin" %>
              <%= render 'admin/shared/header' %>
            <% else %>
              <%= render 'shared/header' %>
            <% end %>
          <% else %>
            <%= render 'shared/header' %>
          <% end %>
        </nav>
      </div>
    </header>
    <%= render "shared/system_alerts", class:'right col-2' %>
    <main>
      <div class="mt-3 container d-flex justify-content-center">
        <div class="container blog col-lg-12 col-xs-12">
          <%= yield %>
        </div>
      </div>
    </main>
    <div class="test"></div>
    <footer class="bg-purple text-white w-100 d-flex justify-content-between align-items-center">
      <div class="d-flex justify-content-between container-fluid">
        <%= render 'shared/footer' %>
      </div>
    </footer>
  </body>
</html>
<script src="https://code.jquery.com/jquery-2.2.0.min.js"></script>