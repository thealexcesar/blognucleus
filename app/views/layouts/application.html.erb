<!DOCTYPE html>
<html>
  <head>
    <title>Blog Nucleus</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="topbar text-white">
      <%= render 'shared/header' %>
    </header>
    <%= render "shared/system_alerts", class:'right col-2' %>
    <main>
      <div class="mt-3 container d-flex justify-content-center">
        <div class="container blog col-lg-12 col-xs-12">
          <%= yield %>
        </div>
      </div>
    </main>

      <footer class="bg-purple text-white w-100 py-3 d-flex justify-content-between align-items-center">
        <div class="py-3 d-flex justify-content-between container-fluid">
          <%= render 'shared/footer' %>
        </div>
      </footer>
  </body>
</html>
