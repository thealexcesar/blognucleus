<!DOCTYPE html>
<html>
  <head>
    <title>Blog Nucleus</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render "shared/system_alerts" %>

    <header class="topbar text-white">
      <%= render 'shared/header' %>
    </header>
    <main>
      <%= yield %>
    </main>
    <footer class="bg-purple text-white w-100 py-3 d-flex justify-content-between align-items-center">
      <div class="py-3 d-flex justify-content-between container-fluid">
        <%= render 'shared/footer' %>
      </div>
    </footer>
  </body>
</html>
