<b class="logo-icon"><%= image_tag('logo.png', width:'80', alt:'Nucleus') %></b>
<div class="ms-3 col-lg-4 col-md-4 col-xs-4">
  <nav>
    <ul class="nav flex nav-pills">
      <li class="nav-item">
        <%= link_to "Home", root_path, class: "nav-link #{"active" if params[:controller] == "home"}" %>
      </li>
      <li class="nav-item">
        <%= link_to t('title.posts'), posts_path, class: "nav-link #{"active" if params[:controller] == "admin/posts" || params[:controller] == "posts"}" %>
      </li>
      <li class="nav-item"> <%# FIXME! %>
        <%= link_to t('general.contact'), "/admin/users", class: "nav-link #{"active" if params[:controller] == "admin/users"}" %>
      </li>
    </ul>
  </nav>
  <a class="nav-toggler waves-effect d-block d-md-none" href="javascript:void(0)"> <i class="ti-menu ti-close"></i> </a>
</div>
<div class="navbar-collapse collapse" id="">
  <ul class="navbar-nav ms-auto">
    <li class=" in">
      <form role="search" class="app-search d-none d-md-block me-3">
        <%= get_filter %> <a href="" class="active"> <i class="fa fa-search"></i> </a>
      </form>
    </li>
    <li>
      <% if signed_in? %>

      <%#= link_to "Sign out", destroy_user_session_path, :method => :delete %>

        <img src="<%= image_path(current_user.nil? ? "logo.png" : "user-solid.svg") %>" alt="user-img" width="30" class="img-circle">
        <span class="text-white font-medium">
          <%= current_user.name.blank? ? truncate(current_user&.email, length: 10) : current_user&.name %>
        </span>
      <% else %>
        <%= link_to "Login", "/users/sign_in", class: 'btn btn-primary' %>
      <% end %>
    </li>
  </ul>
</div>