<div class="container-fluid">
  <nav class="navbar top-navbar navbar-expand-md navbar-dark">
    <b class="logo-icon"><%= image_tag('logo.png', width:'80', alt:'Nucleus') %></b>
    <%
      url_path = root_path
      if signed_in?
        url_path = current_user.user_type == :admin ? admin_posts_path : root_path # FIXME!
      end
    %>
    <div class="col-lg-4 col-md-4 col-xs-4 d-flex justify-content-around">
        <%= link_to "HOME", url_path %>
        <%= link_to "BLOG", url_path %>
        <%= link_to t('activerecord.models.user.one').upcase, url_path %>
      <a class="nav-toggler waves-effect waves-light text-dark d-block d-md-none" href="javascript:void(0)"><i class="ti-menu ti-close"></i></a>
    </div>
    <div class="navbar-collapse collapse" id="">
      <ul class="navbar-nav ms-auto d-flex align-items-center">
        <li class=" in">
          <form role="search" class="app-search d-none d-md-block me-3">
            <input type="text" placeholder="Search..." class="form-control mt-0">
            <a href="" class="active">
              <i class="fa fa-search"></i>
            </a>
          </form>
        </li>
        <li>
          <% if signed_in? %>
          <%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
                <img src="<%= image_path(current_user.nil? ? "logo.png" : "user-solid.svg") %>" alt="user-img" width="30" class="img-circle">
                <span class="text-white font-medium">
                  <%= current_user.name.blank? ? truncate(current_user&.email, length: 10) : current_user&.name %>
                </span>
          <% else %>
            <%= link_to "Login", root_path, class: 'btn btn-primary' %>
          <% end %>
        </li>
      </ul>
    </div>
  </nav>
</div>