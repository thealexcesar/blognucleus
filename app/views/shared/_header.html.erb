<b class="logo-icon"><%= link_to image_tag('logo.png', width:'80', alt:'Nucleus'), root_path %></b>
<div class="ms-3 col-lg-4 col-md-4 col-xs-4">

  <nav>
    <ul class="nav flex nav-pills">
      <% if signed_in? && current_user.user_type == "admin" %>
        <li class="nav-item">
          <%= link_to "Admin", admin_main_index_path, class: "nav-link #{"active" if params[:controller] == "admin/main"}" %>
        </li>
      <% end %>
      <li class="nav-item">
        <%= link_to "Home", root_path, class: "nav-link #{"active" if params[:controller] == "home" && params[:action] == "index"}" %>
      </li>
      <li class="nav-item">
        <%= link_to "Posts", posts_path, class: "nav-link #{"active" if params[:controller] == "posts"}" %>
      </li>
      <li class="nav-item">
        <%= link_to t('general.contact'), home_contact_path, class: "nav-link #{"active" if params[:action] == "contact"}" %>
      </li>
    </ul>
  </nav>

  <a class="nav-toggler waves-effect d-block d-md-none" href="javascript:void(0)"> <i class="ti-menu ti-close"></i> </a>
</div>

<div class="navbar-collapse collapse" id="">
  <div class="navbar-nav ms-auto">
    <div class=" in">
      <% if params[:action] == "index" && params[:controller] == "admin/users" || params[:controller] == "admin/posts" || params[:controller] == "posts" %>
        <form role="search" class="app-search d-none d-md-block me-2">
          <%= get_filter %> <a href="" class="active"> <i class="fa fa-search me-4"></i> </a>
        </form>
      <% end %>
    </div>
  </div>

  <div class="col-lg-1">
    <div class="btn-group text-white">
      <button class="btn btn-default bg-purple">
        <span>
          <img src="<%= image_path("user-solid.svg") %>" alt="user-img" width="20" class="img-circle">
        </span>
      </button>
      <button class="btn btn-default dropdown-toggle text-white" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
        <%= fa_icon("caret-down") %>
      </button>
      <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
        <% if signed_in? %>
          <li><%= link_to "Admin", admin_main_index_path, class: 'dropdown-item' %></li>
          <li><%= link_to "Sign out", destroy_user_session_path, class: 'dropdown-item', method: :delete %></li>
        <% else %>
          <li><%= link_to "Sign in", "/users/sign_in", class: 'dropdown-item' %></li>
          <li><%= link_to "Sign up", "/users/sign_up", class: 'dropdown-item' %></li>
        <% end %>
      </ul>
    </div>
  </div>

</div>

</div>