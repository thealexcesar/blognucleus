<div class="mt-3 container d-flex justify-content-center">
  <div class="container blog col-lg-9 col-md-10 col-sm-12 col-xs-12">
    <%= link_to t('general.new_model', model: t('activerecord.models.user.one')), new_admin_user_path %>
    <h1 class="mt-4"><%= t('activerecord.models.user.other') %></h1>
    <% @users.each do |user| %>
      <div>

        <p><%= user&.name %></p>
        <span>
          <%= truncate(user&.email, length: 10) %><br>
          <%= link_to t('post.see_more'), admin_user_path(user), class: 'text-purple' %>
        </span>
        <span class="pull-right">
          <%= t('post.author') %>: <%= link_to user.name.nil? ? user&.email : user&.name, "#", class: 'text-purple' %>
        </span>
        <br>
        <p><hr class="post margin-hr"></p>
      </div>
  <% end %>
  </div>
</div>