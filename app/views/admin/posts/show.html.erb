<div class="mt-3 container d-flex justify-content-center">
  <div class="container blog col-lg-9 col-md-10 col-sm-12 col-xs-12">
    <%= link_to t('comment.back'), admin_posts_path, class: 'text-purple' %>
    <div class="d-flex justify-content-between">
      <div>
        <h1 class="mt-4">BLOG <%= fa_icon('angle-right', text: @post&.id) %></h1>
        <hr class="post-title margin-hr">
      </div>
      <button>
        <%= link_to t('btn.edit'), edit_post_path(@post), class:'btn btn-primary' %>
      </button>
    </div>
    <h3 class="col-lg-12 col-md-6 col-xs-6"> <%= @post&.title %> </h3>
    <p class="col-lg-12 col-md-6 col-xs-6"> <%= @post&.body %> </p>
    <span class="pull-right small">
      <%= t('post.author') %>:
      <%= link_to @post.user.name.nil? ? @post.user&.email : @post.user&.name, "/admin/users", class: 'text-purple' unless @post.nil? %>
    </span>
    <br>
    <p> <hr class="post margin-hr"> </p>
    <div class="d-flex justify-content-between">
      <h4><%= @post.comments&.count %> <%= @post&.comments.model_name.human(count: @post&.comments.count).upcase %></h4>
      <span class="small"><%= link_to "#" do %>
        <%= t('general.newest') %>
          <%= fa_icon('angle-down') %>
        <% end %>
      </span>
    </div>
    <%= render 'admin/posts/partials/new_comment', comments: @comments %>
    <%= render 'admin/posts/partials/comments', comments: @comments %>
  </div>
</div>
