<% if comments.count > 0
  comments.each do |comment| %>
    <div class="row mt20 margin-nil">
      <div class="chat-discussion chat-discussion-support">
        <div class="chat-message">
          <!--          <img class="message-avatar" id="imagem-perfil" src="<%#= image_path(media.nil? ? "logo-temp.png" : media.get_aws_url) %>" alt="Avatar">-->
          <div class="message">
            <div class="d-flex justify-content-between">
              <a class="message-author" href="#"> <%= comment.name %> </a>
              <p class="message-date"> <%= l(comment&.created_at, format: :long) %> </p>
            </div>
            <div class="d-flex justify-content-between">
              <span class="message-content"> <%= comment&.body %> </span>
              <%= link_to fa_icon("trash"), destroy_comment_posts_path(comment), class: "btn btn-sm btn-danger", method: :delete, data: { confirm: t('confirm.destroy') } %>
            </div>
            <hr>
          </div>
        </div>
      </div>
    </div>
  <%
    end
  end
  %>
