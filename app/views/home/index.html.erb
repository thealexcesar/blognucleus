<p><hr class="mt-3 post margin-hr"></p>
<%= link_to posts_path do %>
  <div class=" text-purple mt-4 d-flex align-items-center">
    <h2 class="d-inline"><%= t('title.last_post', icon: fa_icon("angle-right")).html_safe %> </h2>
  </div>
<% end %>
    <hr class="post-title margin-hr" style="width: inherit">
<div>
  <% unless @last_post.nil? %>
    <p><%= @last_post&.title %></p>
    <span>
      <%= truncate(@last_post&.body, length: 300) %><br>
      <%= link_to t('post.see_more'), @last_post, class: 'text-purple' %>
    </span>
    <span class="pull-right">
        <%= t('post.author') %>: <%= link_to @last_post.user.name.nil? ? @last_post.user&.email : @last_post.user&.name, '#', class: 'text-purple' %>
    </span>
    <br>
    <p><hr class="post margin-hr"></p>
  <% end %>
</div>
